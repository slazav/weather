#!/usr/bin/gnuplot

year="2004"


#set nokey
set xdata time
set timefmt "%d.%m %H:%M"
set title "температура и глубина снега в Туле, весна " . year

plot ["01.03":"01.05"] [-20:50]\
  "../dat/27719_" . year        using 1:3 with lines lc 1 title "температура",\
  "../dat/27719_" . year . "_a" using 1:2 with lines lc 3 lw 2 title "среднесуточная температура",\
  "../dat/27719_" . year . "_a" using 1:3 with linespoints pt 6 lc 4 lw 2 title "глубина снега",\
0 title ""

set terminal png
set output year . ".png"

replot
pause -1